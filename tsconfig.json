{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "declaration": true,
    // "emitDeclarationOnly": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": [
      "react",
      "react-dom"
    ],
  },
  "include": [
    "src/**/*",
    "../shared/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}